<div class="col-md-6">
</div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name),html: {class: 'form-signin col-md-6'}) do |f| %>

  <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>

  <div class="field ">
    <%= f.label :email , class: 'sr-only' %><br />
    <%= f.text_field :login, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password ,class: "sr-only"%><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in" %>
  </div>
  <%= render "devise/shared/links" %>
<% end %>
